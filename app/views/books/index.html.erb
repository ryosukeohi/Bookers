<h1>Books</h1>

<% @books.each do |book| %>
 <h4>Title</h4>
 <span><%= book.title %></span>
 <h4>Body</h4>
 <span><%= book.body %></span>
<% end %>




<h1>New Book</h1>

<%= form_with model:@book, url:'/books', local:true do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Body</p>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>
